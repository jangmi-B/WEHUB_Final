<mapper namespace="com.kh.wehub.board.model.dao.BoardDao">
	<sql id="boardListSql">
		SELECT B.BOARD_NO,
			   M.USER_ID,
			   B.BOARD_WRITER_NO,
		       M.USER_NAME,
		       B.BOARD_CONTENT,
		       B.BOARD_CREATE_DATE,
		       B.BOARD_MODIFY_DATE,
		       B.STATUS,
		       M.MEMBER_IMAGE,
		       D.DEPT_NAME
		FROM BOARD B
		JOIN MEMBER M ON(B.BOARD_WRITER_NO = M.USER_NO)
		JOIN DEPARTMENT D ON(M.DEPT_CODE = D.DEPT_CODE)		
		WHERE B.STATUS='Y' AND B.BOARD_NO=#{boardNo}
	</sql>

