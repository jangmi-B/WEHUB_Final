	<select id="selectBoardList" parameterType="map" resultMap="boardResultMap">
		<include refid="boardListSql"></include>	
		ORDER BY B.BOARD_CREATE_DATE DESC
	</select>
	
	<select id="selectReplyList" parameterType="map" resultMap="replyResultMap">
		SELECT R.REPLY_NO,
			   R.BOARD_NO,
			   R.REPLY_WRITER_NO,
			   M.USER_ID,
		       M.USER_NAME,
		       R.REPLY_CONTENT,
		       R.STATUS,
		       R.REPLY_CREATE_DATE,
		       R.REPLY_MODIFY_DATE,
		       M.MEMBER_IMAGE
		FROM REPLY R
		JOIN MEMBER M ON(M.USER_NO = R.REPLY_WRITER_NO)
		JOIN BOARD B ON(B.BOARD_NO = R.BOARD_NO)		
		WHERE R.STATUS='Y' AND R.REPLY_NO=#{replyNo}
	</select>

	<select id="selectBoardDetail" parameterType="_int" resultMap="boardDetailResultMap">
		SELECT B.BOARD_NO,
		       M.USER_ID AS B_USER_ID,
		       M.USER_NAME AS B_USER_NAME,
		       B.BOARD_WRITER_NO,
		       B.BOARD_CONTENT,
		       B.BOARD_CREATE_DATE,
		       B.STATUS AS B_STATUS,
		       M.MEMBER_IMAGE AS B_MEMBER_IMAGE,
               R.REPLY_NO,
               M2.USER_NAME AS R_USER_NAME, 
               R.BOARD_NO, 
               M2.USER_ID AS R_USER_ID, 
               R.REPLY_CONTENT, 
               R.REPLY_CREATE_DATE, 
               R.REPLY_MODIFY_DATE, 
               R.STATUS AS R_STATUS,
               M2.MEMBER_IMAGE AS R_MEMBER_IMAGE,
               D.DEPT_NAME
        FROM BOARD B
        JOIN MEMBER M ON(B.BOARD_WRITER_NO = M.USER_NO)
        JOIN DEPARTMENT D ON (M.DEPT_CODE = D.DEPT_CODE)
        LEFT OUTER JOIN REPLY R ON(B.BOARD_NO = R.BOARD_NO)
        LEFT OUTER JOIN MEMBER M2 ON(r.REPLY_WRITER_NO = M2.USER_NO)
        WHERE B.STATUS='Y' AND R.STATUS='Y'
        ORDER BY B.BOARD_CREATE_DATE DESC
	</select>
	
	<insert id="insertBoard" parameterType="map"
  		useGeneratedKeys="true" keyProperty="boardNo" keyColumn="BOARD_NO">
  		
  		INSERT INTO BOARD 
  		VALUES(
  			SEQ_BOARD_NO.NEXTVAL,
  			#{boardWriterNo},
  			#{boardContent},
  			DEFAULT,
  			SYSDATE,
  			SYSDATE
 		)
  	</insert>

	<update id="updateBoard" parameterType="Board">
		UPDATE BOARD 
		SET 
			BOARD_CONTENT=#{boardContent},
			BOARD_MODIFY_DATE=SYSDATE 
		WHERE 
			BOARD_NO=#{boardNo}
	</update>	
	
	<update id="deleteBoard" parameterType="Board">
		UPDATE BOARD SET STATUS='N' WHERE BOARD_NO=#{boardNo}	
	</update>
	
	<insert id="insertReply" parameterType="map"
        useGeneratedKeys="true" keyProperty="replyNo" keyColumn="REPLY_NO">
        
        INSERT INTO REPLY 
        VALUES(
           SEQ_BOARD_NO.NEXTVAL,
           #{boardNo},
           #{user_no},
           #{replyContent},
           DEFAULT,
           SYSDATE,
           SYSDATE
       )
     </insert>
     
     <update id="updateReply" parameterType="Reply">
      UPDATE REPLY
      SET 
         REPLY_CONTENT=#{replyContent},
         REPLY_MODIFY_DATE=SYSDATE 
      WHERE 
         REPLY_NO=#{replyNo}
   </update>
   
   <update id="deleteReply" parameterType="Reply">
		UPDATE REPLY SET STATUS='N' WHERE REPLY_NO=#{replyNo}	
	</update>
</mapper>