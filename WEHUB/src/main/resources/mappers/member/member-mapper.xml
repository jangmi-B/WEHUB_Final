<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.kh.wehub.member.model.dao.MemberDao">

	<sql id="selectMemberSql">
		 SELECT USER_NO,
		 		USER_COMPANYNAME,
		        USER_ID,
		        USER_PWD,
		        USER_NAME,
		        RANK,
	         	EMAIL,
	         	COMCALL,
	         	PHONE,
	         	ADDRESS,
		        USER_STATUS,
		        M.DEPT_CODE,
		        D.DEPT_NAME,
		        MEMBER_IMAGE
			FROM MEMBER M
			JOIN DEPARTMENT D ON D.DEPT_CODE = M.DEPT_CODE
			WHERE USER_STATUS ='Y'
	</sql>
	
	
	
	<resultMap type="Member" id="memberResultMap">
		<id property="user_no" column="USER_NO"/>
		<id property="user_companyname" column="USER_COMPANYNAME"/>
		<id property="user_id" column="USER_ID"/>
		<id property="user_pwd" column="USER_PWD"/>
		<id property="user_name" column="USER_NAME"/>
		<id property="rank" column="RANK"/>
		<id property="email" column="EMAIL"/>
		<id property="comcall" column="COMCALL"/>
		<id property="phone" column="PHONE"/>
		<id property="address" column="ADDRESS"/>
		<id property="user_status" column="USER_STATUS"/>
		<id property="dept_code" column="DEPT_CODE"/>
		<id property="member_image" column="MEMBER_IMAGE"/>
	</resultMap>
	
	<select id="selectMember" parameterType="string" resultMap="memberResultMap">
		<include refid="selectMemberSql"></include>
	 	AND USER_ID = #{userId}
	</select>
	
	<select id="selectMemberAll" parameterType="string" resultMap="memberResultMap">
		<include refid="selectMemberSql"></include>
		AND USER_ID != #{userId}
	</select>
	
	<select id="selectSearchedMember" parameterType="map" resultMap="memberResultMap">
		SELECT M.USER_NO,
		        M.USER_NAME,
		        M.RANK,
		        D.DEPT_NAME
		FROM MEMBER M
        JOIN DEPARTMENT D ON (M.DEPT_CODE = D.DEPT_CODE)
        WHERE M.USER_STATUS='Y' AND (M.USER_NAME LIKE '%'||#{searchData}||'%' OR
        							 M.RANK LIKE '%'||#{searchData}||'%' OR 
        							 D.DEPT_NAME LIKE '%'||#{searchData}||'%')		
		AND USER_ID != #{userId}		 
	</select>
	
	<select id="getSearchMember" parameterType="string" resultMap="memberResultMap">
		SELECT M.USER_NAME, M.DEPT_CODE, M.RANK
		FROM MEMBER M
		WHERE USER_NAME LIKE '%'|| #{userName} ||'%'
	</select>
	
</mapper>